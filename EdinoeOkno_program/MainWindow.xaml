<Window x:Class="EdinoeOkno_program.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EdinoeOkno_program"
        mc:Ignorable="d"
        Title="Единое окно" Height="450" Width="800">
    <TabControl Grid.Row ="0" Margin="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TabStripPlacement="Right" BorderThickness="5" >
        <TabItem Header="Заявки" Height="50" Width="100">
            <Grid x:Name="requestFrame">
                <local:Requests_UserConrol></local:Requests_UserConrol>
            </Grid>
        </TabItem>
        <TabItem Header="Вопросы" Height="50" Width="100">
            <TextBlock FontSize="35" VerticalAlignment="Center" HorizontalAlignment="Center">В разработке</TextBlock>
        </TabItem>
        <TabItem Header="Запись" Height="50" Width="100">
            <TextBlock FontSize="35" VerticalAlignment="Center" HorizontalAlignment="Center">В разработке</TextBlock>
        </TabItem>
        <TabItem Header="Анкетирование" Height="50" Width="100">
            <Grid x:Name="formsFrame">
                <local:Forms_UserControl></local:Forms_UserControl>
            </Grid>
        </TabItem>
    </TabControl>
</Window>