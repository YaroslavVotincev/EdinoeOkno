<UserControl x:Class="EdinoeOkno_program.Forms_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EdinoeOkno_program"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="requestFrame">
        <ListBox x:Name="requestsListBox" HorizontalAlignment="Left" Width="249" Margin="10,10,0,22" BorderBrush="Black" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" SelectionChanged="requestsListBox_SelectionChanged"/>
        <ScrollViewer x:Name="workingArea" Margin="264,10,10,0" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" BorderBrush="Black" HorizontalScrollBarVisibility="Auto"/>
        <Button x:Name="AddForm" Content="Добавить форму" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Bottom" Click="Button_Click"  Width="249" Height="20" HorizontalContentAlignment="Center"/>
    </Grid>
</UserControl>
